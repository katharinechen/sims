<h1>Item Form</h1>

<%= form_for @item do |f| %> 
  <div class="form-group">
    <%=f.label :name %>
    <%=f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=f.label :PAR %>
    <%=f.text_field :PAR, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=f.label :current_stock_level %>
    <%=f.text_field :current_stock_level, class: "form-control" %>
  </div>
  <%= f.submit(:class => "btn btn-info") %>
<% end %> 
