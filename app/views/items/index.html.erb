<h1>Inventory List</h1>

<table class="table table-hover"> 
  <thead>
    <tr>
      <th>Item Name</th>
      <th>PAR</th>
      <th>Current Stock Level</th>
      <th>Difference</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.PAR %></td>
        <td><%= item.current_stock_level %></td> 
        <td><%= item.difference %></td>
      </tr>
    <% end %>
  </tbody>
</table> 